@using MvcOnlineTicariOtomasyon.Models.Sınıflar;
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:20px; margin-left:20px; ">

    <tr>
        
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            
            <td>@item.KategoriAd</td>
            <td><a class="btn btn-danger" href="/Kategori/KategoriSil/@item.KategoriID">Sil</a></td>
            <td><a class="btn btn-success" href="/Kategori/KategoriGetir/@item.KategoriID">Güncelle</a></td>
        </tr>

    }

</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index", new {sayfa}))
<a style="width:150px;" href="/Kategori/KategoriEkle" role="button" class="btn btn-secondary btn-lg">Kategori Ekle</a>
