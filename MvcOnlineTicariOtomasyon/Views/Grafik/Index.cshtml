
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>

@{ 
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Kategoriler ve Ürün Sayıları");
    grafik.AddLegend(title: "Değerler");

    grafik.AddSeries(
        name: "Veriler",
        xValue: new[] {"Avize","Koltuk","Halı","Masa","Ayna","Aksesuar","Dolap","Yatak","Sandalye"},
        yValues: new[] {100,100,47,100,75,50,80,120,50}
        );
    grafik.Write();
}