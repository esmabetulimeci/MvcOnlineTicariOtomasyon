@using MvcOnlineTicariOtomasyon.Models.Sınıflar;
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2>Index</h2>

<table class="table table-bordered" style="margin-top:20px; margin-left:20px; ">

    <tr>
        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Teslim Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.FaturaID</td>
            <td>@item.FaturaSeriNo</td>
            <td>@item.FaturSıraNo</td>
            <td>@item.VergiDairesi</td>
            <td>@item.Tarih</td>
            <td>@item.Saat</td>
            <td>@item.TeslimEden</td>
            <td>@item.TeslimAlan</td>
            <td>@item.Toplam</td>
            <td><a class="btn btn-success" href="/Fatura/FaturaGetir/@item.FaturaID">Güncelle</a></td>
            <td><a class="btn btn-default" href="/Fatura/FaturaDetay/@item.FaturaID" style="background-color:darkcyan; color:white;">Detay</a></td>
        </tr>

    }

</table>

<a style="width:150px;" href="/Fatura/FaturaEkle" role="button" class="btn btn-primary btn-lg">Yeni Fatura Eklee</a>

