@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h3 style="margin-left:10px;">CARİLER</h3>
<table class="table table-bordered" style="margin-top:10px; margin-left:10px; width:auto; border:solid 1px black">
    <tr>
        <th>Cari ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach(var item in Model)
            {
               <tr>
                   <td>@item.CariID</td>
                   <td>@item.CariAd</td>
                   <td>@item.CariSoyad</td>
                   <td>@item.CariSehir</td>
                   <td>@item.CariMail</td>
                   <td><a href="/Cari/CariSil/@item.CariID" class="btn btn-danger">Sil</a></td>
                   <td><a href="/Cari/CariGetir/@item.CariID" class="btn btn-success">Güncelle</a></td>
                   <td><a style="background-color:darkcyan; color:white;" href="/Cari/MusteriSatis/@item.CariID" class="btn btn-primary">Satış Geçmişi</a></td>
               </tr>
            }
</table>

<a href="/Cari/CariEkle/" class="btn btn-info">Yeni Cari Ekle</a>
