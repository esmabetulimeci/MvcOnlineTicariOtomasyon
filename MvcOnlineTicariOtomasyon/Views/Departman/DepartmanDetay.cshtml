@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Departma Detay Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adi:@ViewBag.d</li>
    </ol>

<table class="table table-bordered">
    <tr>
    
        <th>Ad</th>
        <th>Soyad</th>
 
        <th>Satışlar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
        
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
         
            <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-default" style="background-color:orangered">Satışlar</a></td>
        
        </tr>
    }
</table>
