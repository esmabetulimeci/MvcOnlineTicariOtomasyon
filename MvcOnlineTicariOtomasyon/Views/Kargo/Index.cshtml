@using MvcOnlineTicariOtomasyon.Models.Sınıflar;
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Kargolar</h2>
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası :@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered" style="margin-top:20px; margin-left:20px; ">

    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip Kodu</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Personel</td>
            <td>@item.Alici</td>
            <td>@item.Tarih</td>
            <td>@item.TakipKodu</td>
            <td><a class="btn btn-default" href="/Kargo/KargoTakip/@item.TakipKodu" style="background-color:darkcyan; color:white;">Detay</a></td>
        </tr>

    }

</table>

<a style="width:150px;" href="/Kargo/YeniKargo" role="button" class="btn btn-primary btn-lg">Yeni Kargo Girişi</a>