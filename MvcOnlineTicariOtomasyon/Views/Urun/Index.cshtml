@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Urunler</h2>

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fİyat</th>
        <th>Kategori</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach(var urun in Model)
            {
                <tr>
                    <td>@urun.UrunID</td>
                    <td>@urun.UrunAd</td>
                    <td>@urun.Marka</td>
                    <td>@urun.Stok</td>
                    <td>@urun.AlisFiyati</td>
                    <td>@urun.SatisFiyati</td>
                    <td>@urun.Kategori.KategoriAd</td>
                    <td>@urun.UrunGorsel</td>
                    <td><a href="/Urun/UrunSil/@urun.UrunID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Urun/UrunGetir/@urun.UrunID" class="btn btn-success">Güncelle</a></td>
         </tr>
            }
</table>

<a href="/Urun/UrunEkle/" class="btn btn-info">Yeni Ürün Ekle</a>