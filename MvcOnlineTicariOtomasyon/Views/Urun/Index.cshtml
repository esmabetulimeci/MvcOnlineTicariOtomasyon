@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h3 style="margin-left:10px;">ÜRÜNLER</h3>

@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <div style="background-color: white; padding: 10px; border: 2px solid #399565; width: 350px;margin-top:10px; margin-left:10px; ">
        <p style="margin-top:10px;">
            Ürün Adı : @Html.TextBox("p")
            <input type="submit" value="Ara" />
        </p>
    </div>
}

<br />
<table class="table table-bordered" style="margin-top:10px; margin-left:10px; width:auto; border:solid 1px black">
    <tr>

        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fİyat</th>
        <th>Kategori</th>

        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>

    </tr>

    @foreach (var urun in Model)
    {
        <tr>

            <td>@urun.UrunAd</td>
            <td>@urun.Marka</td>
            <td>@urun.Stok</td>
            <td>@urun.AlisFiyati ₺</td>
            <td>@urun.SatisFiyati ₺</td>
            <td>@urun.Kategori.KategoriAd</td>

            <td><a href="/Urun/UrunSil/@urun.UrunID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@urun.UrunID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Urun/SatisYap/@urun.UrunID" class="btn btn-warning">Satış Yap</a></td>
        </tr>
    }
</table>

<a style="width: 150px; margin-left: 10px; background-color: #004626 " href="/Urun/UrunEkle/" class="btn btn-info">Yeni Ürün Ekle</a>